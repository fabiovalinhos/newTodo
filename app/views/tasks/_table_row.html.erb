<!-- Colocar borda apenas nas tasks principais -->
<tr class='<%= task.parent? ? 'border-top' : '' %>'>

  <!-- Colocar margem apenas nas subtarefas -->
  <td class='<%= task.sub_tasks? ? 'pl-5' : '' %>'>
    <span class="text-<%= task.css_color %> pr-2"><%= task.symbol %></span>

    <% if task.done? %>
      <s class="text-muted"><%= task.description %></s>
    <% else %>
      <%= task.description %>
    <% end %>
  </td>

  <td><%= l task.due_date %></td>

  <td class="text-right pr-0">
    <% if task.parent? %>
      <%= link_to '+ Sub-tarefa', new_task_path(parent_id: task.id), class: "btn btn-success btn-sm" %>
    <% end %>

    <%= link_to 'Editar', edit_task_path(task), class: "btn btn-secondary btn-sm" %>

    <%= link_to 'Apagar', task_path(task), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "VocÃª deseja apagar?"} %>
  </td>
</tr>
